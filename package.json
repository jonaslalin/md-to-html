{
  "name": "md-to-html",
  "version": "1.0.0",
  "description": "Convert markdown files with mermaid diagrams to HTML",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/cli.ts",
    "start": "tsx src/cli.ts",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "check": "biome check .",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "markdown",
    "mermaid",
    "html",
    "converter",
    "svg"
  ],
  "author": "Jonas Lalin <1ac6df24@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jonaslalin/md-to-html.git"
  },
  "dependencies": {
    "@mermaid-js/mermaid-cli": "^11.12.0",
    "micromark": "^4.0.2",
    "micromark-extension-gfm": "^3.0.0",
    "pino": "^10.2.0",
    "pino-pretty": "^13.1.3",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/node": "^24.0.0",
    "@types/yargs": "^17.0.35",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=24.0.0"
  }
}
